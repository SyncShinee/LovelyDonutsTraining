#include <cstdio>
#include <algorithm>
#include <cstring>
using namespace std;
typedef long long ll;
ll a[100010];
int main() {
    int n;
    ll d;
    scanf("%d%I64d", &n, &d);
    for (int i = 0; i < n; ++ i) {
	scanf("%I64d", &a[i]);
    }
    ll ans = 0, mx = 0;
    for (int i = 1; i < n; ++ i) {
	if (a[i] >= a[i - 1]) {
	    ans += (a[i] - a[i - 1]) / (2 * d) + 1;
	    mx = max(mx, (a[i] - a[i - 1]) / (2 * d) + 1);
	}
	else ans -= (a[i - 1] - a[i] - 1) / (2 * d);
    }
    printf("%I64d\n", max(ans, mx));
    return 0;
}
